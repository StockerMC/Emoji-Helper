[Unit]
Description=Emoji Helper
After=network-online.target
StartLimitIntervalSec=500
StartLimitBurst=10

[Service]
Type=simple
WorkingDirectory=/root/Emoji-Helper
ExecStart=/root/Emoji-Helper/venv/bin/python3.9 /root/Emoji-Helper/bot.py
User=root
Restart=on-failure
RestartSec=5s
Environment=PYTHONUNBUFFERED=1

[Install]
WantedBy=multi-user.target